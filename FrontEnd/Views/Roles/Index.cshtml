@model IEnumerable<FrontEnd.Models.RolesViewModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreRol)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NombreRol)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.RoleId }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.RoleId })
        </td>
    </tr>
}

</table>
